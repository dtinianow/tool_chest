<%= render partial: 'shared/summary' %>

<h2>All the Tools</h2>

<div class="list_of_tools">
<% @tools.each do |tool| %>
<h4><%= link_to tool.name, user_tool_path(id: tool) %> - <%= tool.quantity %> - $<%= tool.price %></h4>
<%= link_to "Edit", edit_user_tool_path(id: tool) %>
<%= link_to "Delete", user_tool_path(id: tool), method: :delete %>
<% end %>
</div>
<br>
<%= link_to "Create New Tool", new_user_tool_path %>
